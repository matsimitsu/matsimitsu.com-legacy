<% wrap_layout :layout do %>
  <article class="container">
    <section class="py-16 max-w-4xl m-auto text-center">
      <%= scaled_image(current_article.data[:image], "Header image", "cover") %>
      <hgroup>
          <div class="Dates">
      <span class="DateRange"><%= current_article.data[:date] %><i class="fa fa-angle-right"></i><%= current_article.data[:end_date] %></span>
    </div>

      <h1 class="H-Large post-title"><%= current_article.title %></h1>
      <p class="T-Large post-intro"><%= current_article.data[:subtitle] %></p>
      </hgroup>
    </section>
    <section class="py-16 max-w-2xl text-center m-auto">
      <%= yield %>
    </section>
  </article>
  <% if trip_article?(current_article, current_article.article_previous) || trip_article?(current_article, current_article.article_next) %>
    <div class="PostNavigation">
      <h1 class="H-Large">
        More posts from <%= current_trip[:title] %>
      </h1>
      <div class="Container">
        <% if trip_article?(current_article, current_article.article_previous) %>
          <%= partial :post_card, :locals => {:article => current_article.article_previous, :next_or_prev => "previous"} %>
        <% end %>
        <% if trip_article?(current_article, current_article.article_next) %>
          <%= partial :post_card, :locals => {:article => current_article.article_next, :next_or_prev => "next"} %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

