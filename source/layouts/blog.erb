<% wrap_layout :layout do %>
  <article class="Container">
    <section class="GenericHeader">
      <hgroup>
        <h1 class="H-Large post-title"><%= current_article.title %></h1>
        <div class="Dates">
          <span class="DateRange"><%= current_article.date.strftime("%Y-%m-%d") %></span>
        </div>
      </hgroup>
    </section>
    <section class="BlogPostBody">
      <%= yield %>
    </section>
  </article>

  <section class="Container full contrast">
    <header class="GenericHeader">
    <h1 class="H-Medium post-title">More from the blog</h1>
    </header>

    <%= partial "article_list", :locals => {:limit => 99, :title => "More from the blog"} %>
  </section>
<% end %>

