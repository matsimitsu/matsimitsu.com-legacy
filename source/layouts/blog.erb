<% wrap_layout :layout do %>
  <article>
    <section class="container py-16 max-w-4xl m-auto text-center">
      <hgroup>
        <h1 class="text-6xl font-bold text-gray-9"><%= current_article.title %></h1>
        <div class="Dates">
          <span class="DateRange"><%= current_article.date.strftime("%Y-%m-%d") %></span>
        </div>
      </hgroup>
    </section>
    <section class="c--markdown">
      <%= yield %>
    </section>
  </article>

  <section class="Container full contrast">
    <header class="GenericHeader">
    <h1 class="H-Medium post-title">More from the blog</h1>
    </header>

    <%= partial "article_list", :locals => {:limit => 99, :title => "More from the blog"} %>
  </section>
<% end %>

